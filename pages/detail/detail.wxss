/* pages/detail/detail.wxss */

.container {
    width: 100%;
}

.content {
    width: 100%;
}

.content>image {
    width: 100%;
    height: 232px;
}

.textCont {
    width: 100%;
    padding: 0 36rpx;
}

.movie_title {
    font-size: 0;
    margin: 32rpx auto;
}

.movie_title>.title {
    font-size: 32rpx
}

.director,
.actors,
.contText,
.language,
.category,
.play_date {
    font-size: 24rpx;
    margin-bottom: 20rpx;
}
.director>text,
.actors>text,
.contText>text,
.language>text,
.category>text,
.play_date>text {
    margin-right: 10rpx;
}


.movie_info {
    font-size: 0;
}

.movie_info>.contText {font-size: 24rpx}
.bottom{
    position: absolute;
    bottom: 40rpx;
    width: 312rpx;
    line-height: 72rpx;
    height: 72rpx;
    background-color: #fe8233;
    border-radius: 32rpx;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}
.foot_bottom{
  width: 100%;
  margin-top: 300rpx;
  position: relative;
  display: flex;
  justify-content: center;
}